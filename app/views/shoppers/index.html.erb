<%- model_class = Shopper -%>
<div class="page-header">
  <h3>Shopper Home Page</h3>
</div>
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span3">
      <div class="well sidebar-nav">
        <ul class="nav nav-list">
          <%= simple_form_for(:shopper, remote: true, :url => shoppers_search_path, :defaults => {:required => false})  do |f| %>
            <p class="nav-header"><h4>Categories</h4></p>
            <%= f.collection_check_boxes :category_ids, Category.all_in_order, :id, :name, {:item_wrapper_class => 'checkbox_container'} %>
            <hr></hr>
            <%= f.input_field :zip_code, :placeholder=>"Zip Code", :class=> "input-medium" %>
            <%= f.input_field :distance, :placeholder=>"Miles", :class=> "input-medium" %>
            <%= f.submit 'Search' %>
          <% end %> <!-- do  -->
        </ul>
      </div><!--/well -->
    </div><!--/span3-->
    <div class="span8">
      <%= render 'shared/display_products' %> 
    </div>
    <div class="page">
      <%= render 'shared/page' %> 
    </div>

  </div>  <!-- row-fluid  -->

</div>  <!-- container  -->
