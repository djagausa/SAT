<%- model_class = Product -%>
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
      <div class="span10 pagination-center col-offset-2">
          <img class="mp_image" src="sat-header.jpg">
      </div>
    </div>
    <div class="span3">
      <div class="well sidebar-nav">
        <ul class="nav nav-list">
        <li class="nav-header"><h4>Categories</h4></li>
          <% @categories.each do |category|  %>
            <li><%= link_to category.name, category_products_path(category.id), remote: true %></li>
          <% end %>
        </ul>
      </div><!--/well -->
      <%= simple_form_for(:store, remote: true, :url => stores_geo_path)  do |f| %>
        <%= f.input :zip_code, :placeholder=>"Zip Code", :class=> "input-medium" %>
        <%= f.input :distance, :placeholder=>"Miles", :class=> "input-medium" %>
        <%= f.submit 'Search' %>
      <% end %>
      </div><!--/span3-->
      <div class="span8">
        <%= render :partial => 'home_products' %>        
      </div>
  </div>
</div>
