<header class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="brand" href="#">Shop Around Town</a>
      <ul class="nav">
        <li><%= link_to "Home", root_path %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle='dropdown'>
            Register
            <b class='caret'></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "Register Shopper", new_shopper_path %></li>
            <li><%= link_to "Register Business", new_biz_path %></li>
          </ul>
        </li>  <!-- dropdown -->
      </ul>  <!-- nav  -->
      <%= simple_form_for(:session, :url => sessions_path, :html => {:class => "form-inline" })  do |f| %>
        <%= f.input_field :email, :placeholder=>"Email", :class=> "input-medium" %>
        <%= f.input_field :password, :placeholder=>"Password", :class=> "input-medium" %>
        <%= f.submit "Login", :class=> "btn" %>
      <% end %>
    </div>  <!-- container  -->
  </div>  <!-- navbar-inner  -->
</header>